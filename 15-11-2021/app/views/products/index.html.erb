<%require 'net/http' %>
<!-- Section -->
<section class="py-5">
  <div class="container px-4 px-lg-5 mt-5">
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
      <% @product_list.each do |product| %>
        <div class="col mb-5">
          <div class="card h-100">
            <!-- Product image-->
            <img id="img_homepage" class="card-img-top" src="<%= product.image %>?width=300" onerror="img_homepage_standby()" />
            <!-- Product details-->
            <div class="card-body p-4">
              <div class="text-center">
                <h5 class="fw-bolder"><%=product.title %></h5>
                <%= product.price.to_i %> â‚«
              </div>
            </div>
            <!-- Product actions-->
            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
              <div class="text-center">
                <a> <%= link_to "Show", product_path(product.id), class: "btn btn-outline-dark mt-auto" %></a>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="digg_pagination" >
    <%= will_paginate @product_list %>
  </div>
</section>



